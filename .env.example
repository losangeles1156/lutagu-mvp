# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ODPT API (Public Transport Open Data Center)
# Register at: https://developer.odpt.org/
ODPT_API_KEY_METRO=your-tokyo-metro-api-key
ODPT_API_KEY_JR_EAST=your-jr-east-challenge-key
ODPT_API_KEY_PUBLIC=optional-public-api-key

# Mapbox (Optional, if using Mapbox tiles)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# AI Backend (n8n)
N8N_WEBHOOK_URL=https://n8n-k7m3694.zeabur.app/webhook/bambigo-chat
N8N_WEBHOOK_SECRET=optional_secret_token

# LINE Messaging API (For Notifications)
LINE_CHANNEL_ACCESS_TOKEN=your-line-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# Activity Logging
ACTIVITY_LOGGING_ENABLED=true
ACTIVITY_HASH_SALT=replace-with-random-secret

# Member PII Encryption (32-byte key in base64)
PII_ENCRYPTION_KEY_BASE64=replace-with-32-byte-base64

# Security Monitoring
SECURITY_ALERT_WEBHOOK_URL=

# Rate limiting
RATE_LIMIT_ENABLED=true

# AI/ML Configuration (Mistral API)
# Get API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key

# AI Model Selection
AI_SLM_MODEL=mistral-small-latest
AI_LLM_MODEL=mistral-large-latest
AI_MEDIUM_MODEL=mistral-medium-latest

# Cost Management
DAILY_BUDGET=10.0

# Cache TTL (in milliseconds)
CACHE_TTL_MS=300000
