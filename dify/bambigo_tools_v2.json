{
    "tools": [
        {
            "name": "get_station_context",
            "description": "取得車站完整資訊 (L1-L3)。返回周邊 POI、氛圍標籤、路線狀態、設施資訊、無障礙指引。",
            "parameters": {
                "type": "object",
                "properties": {
                    "stationId": {
                        "type": "string",
                        "description": "車站 ID (例如: 'ueno', 'tokyo', 'asakusa')",
                        "required": true
                    },
                    "locale": {
                        "type": "string",
                        "enum": [
                            "ja",
                            "en",
                            "zh-TW"
                        ],
                        "description": "回應語言",
                        "default": "ja"
                    }
                },
                "required": [
                    "stationId"
                ]
            },
            "endpoint": {
                "method": "GET",
                "url": "https://lutagu.vercel.app/api/station/context",
                "query_params": [
                    "stationId",
                    "locale"
                ]
            }
        },
        {
            "name": "search_route",
            "description": "路線搜尋 (起點到終點)。使用 ODPT API 搜尋東京交通路線，返回多個路線選項包含票價、時間、轉乘次數。",
            "parameters": {
                "type": "object",
                "properties": {
                    "from": {
                        "type": "string",
                        "description": "出發站名 (日文或英文)",
                        "required": true
                    },
                    "to": {
                        "type": "string",
                        "description": "目的地站名",
                        "required": true
                    },
                    "datetime": {
                        "type": "string",
                        "description": "出發時間 (ISO 8601 格式)",
                        "required": false
                    }
                },
                "required": [
                    "from",
                    "to"
                ]
            },
            "endpoint": {
                "method": "GET",
                "url": "https://lutagu.vercel.app/api/odpt/route",
                "query_params": [
                    "from",
                    "to",
                    "datetime"
                ]
            }
        },
        {
            "name": "get_jma_alerts",
            "description": "取得 JMA 氣象警報。返回東京地區的氣象警報，包含嚴重程度分類 (critical/warning/advisory/info)。用於判斷是否有極端天氣影響出行。",
            "parameters": {
                "type": "object",
                "properties": {}
            },
            "endpoint": {
                "method": "GET",
                "url": "https://lutagu.vercel.app/api/weather",
                "query_params": []
            }
        },
        {
            "name": "search_expert_knowledge",
            "description": "專家知識搜尋。搜尋交通專家知識庫，包含無障礙指引、季節/活動特別建議、轉乘技巧等。適合回答特定車站的實用問題。",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "搜尋關鍵字或自然語言問題",
                        "required": true
                    },
                    "tags": {
                        "type": "string",
                        "description": "篩選標籤 (逗號分隔，例如: 'accessibility,locker')"
                    },
                    "stationId": {
                        "type": "string",
                        "description": "限定特定車站"
                    },
                    "locale": {
                        "type": "string",
                        "enum": [
                            "ja",
                            "en",
                            "zh-TW"
                        ],
                        "default": "ja"
                    }
                },
                "required": [
                    "query"
                ]
            },
            "endpoint": {
                "method": "GET",
                "url": "https://lutagu.vercel.app/api/l4/knowledge",
                "query_params": [
                    "query",
                    "tags",
                    "stationId",
                    "locale"
                ]
            }
        },
        {
            "name": "get_hub_info",
            "description": "取得 Hub 節點資訊。返回 Hub 車站的成員站、轉乘複雜度、步行距離、室內連通說明。適合回答大型轉乘站的相關問題。",
            "parameters": {
                "type": "object",
                "properties": {
                    "hubId": {
                        "type": "string",
                        "description": "Hub 節點 ID (例如: 'hub:ueno', 'hub:tokyo')",
                        "required": true
                    },
                    "locale": {
                        "type": "string",
                        "enum": [
                            "ja",
                            "en",
                            "zh-TW"
                        ],
                        "default": "ja"
                    }
                },
                "required": [
                    "hubId"
                ]
            },
            "endpoint": {
                "method": "GET",
                "url": "https://lutagu.vercel.app/api/tools/hub-info",
                "query_params": [
                    "hubId",
                    "locale"
                ]
            }
        }
    ]
}
